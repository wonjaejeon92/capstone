<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_borderline_left"
    android:orientation="vertical"
    tools:context=".Arrange.FragmentRobot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/BtnMoveRobot"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_borderline2"
            android:text="이동"
            android:textColor="#000000" />

        <Button
            android:id="@+id/BtnDeleteRobot"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_borderline2"
            android:text="삭제"
            android:textColor="#000000" />

    </LinearLayout>

    <ListView
        android:id="@+id/listRobot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>